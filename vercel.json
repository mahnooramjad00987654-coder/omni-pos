{
    "version": 2,
    "public": false,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://your-api-url.com/api/$1"
        },
        {
            "source": "/hubs/(.*)",
            "destination": "https://your-api-url.com/hubs/$1"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "https://your-api-url.com/uploads/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}